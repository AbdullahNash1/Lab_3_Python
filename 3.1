employee_salaries = {}

while True:
    name = input("Enter employee name (or 'no' to quit): ")
    if name.lower() == 'no':
        break
    salary = float(input("Enter {}'s salary: ".format(name)))
    employee_salaries[name] = salary

print("\nEmployee salaries recorded:")
for name, salary in employee_salaries.items():
    print("{}: ${:,.2f}".format(name, salary))
